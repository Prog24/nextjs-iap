{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error",
        "useHookAtTopLevel": "error"
      }
    },
    "ignore": [".next", "node_modules"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": [".next", "node_modules"]
  },
  "files": {
    "ignore": [".next", "node_modules"]
  }
}
